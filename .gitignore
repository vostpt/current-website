# Copied from github/gitignore/WordPress.gitignore

# ignore everything in the root except the "wp-content" directory.
!wp-content/

# ignore everything in the "wp-content" directory, except:
# "mu-plugins", "plugins", "themes" directory
wp-content/*
!wp-content/mu-plugins/
!wp-content/plugins/
!wp-content/themes/

# ignore these plugins
wp-content/plugins/hello.php

# ignore specific themes
wp-content/themes/twenty*/

# ignore node dependency directories
node_modules/

# ignore log files and databases
*.log
*.sql
*.sqlite

# Ignore all files starting with .
.*

# Forcing the tracking of .gitignore
!.gitignore

# Forcing to ignore wp-config.php
/wp-config.php

# Forcing to ignore wp-admin

wp-admin/

# Forcing to ignore wp-includes

wp-includes/*

# Forcing to ignore root .php files

/index.php
/wp-activate.php
/wp-blog-header.php
/wp-comments-post.php
/wp-config-sample.php
/wp-cron.php
/wp-links-opml.php
/wp-load.php
/wp-login.php
/wp-mail.php
/wp-settings.php
/wp-signup.php
/wp-trackback.php
/xmlrpc.php

# Forcing to ignore readme.html

readme.html

# Files generated by wordpress theme

wp-content/themes/vost/testemunhos_media.json
wp-content/themes/vost/equipa.json
